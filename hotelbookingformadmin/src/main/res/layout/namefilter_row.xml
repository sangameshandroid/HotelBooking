<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"


            >
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="First Name"
                android:textStyle="bold"
                android:textColor="@color/black"

                />
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Last Name"
                android:textStyle="bold"
                android:textColor="@color/black"

                />
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Email"
                android:textStyle="bold"
                android:textColor="@color/black"

                />
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Phone"
                android:textStyle="bold"
                android:textColor="@color/black"

                />
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Address"
                android:textStyle="bold"
                android:textColor="@color/black"

                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="RoomType"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"

                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Checkin-date"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="checkout-date"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Amount(INR)"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/txt_firstname"
                android:textColor="#4D11B1"

                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/txt_lastname"
                android:textColor="#4D11B1"

                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/txt_email"
                android:textColor="#4D11B1"

                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/txt_phone"
                android:textColor="#4D11B1"

                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:id="@+id/txt_address"
                android:textColor="#4D11B1"

                />

            <TextView
                android:id="@+id/txt_rooms2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#4D11B1"
                android:textSize="18sp"

                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/txt_checkindate2"
                android:textColor="#4D11B1"
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/txt_checkoutdate2"
                android:textColor="#4D11B1"
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/txt_netpay2"
                android:textColor="#4D11B1"
                />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>