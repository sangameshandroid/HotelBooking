<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SignupActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#C9D6CF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:text="Hotel Booking Form"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                />
            <ImageView
                android:layout_width="340dp"
                android:layout_height="140dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/hotelbooking"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#062639">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@color/custom_color"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>
            <EditText
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:layout_gravity="center"
                android:hint="First Name"
                android:id="@+id/edit_firstname"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textColor="@color/custom_color"
                android:textColorHint="#6C757D"
                android:padding="10dp"/>
            <EditText
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:layout_gravity="center"
                android:hint="Last Name"
                android:id="@+id/edit_lastname"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/custom_color"
                android:textColorHint="#6C757D"
                android:padding="10dp"/>
            <EditText
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:layout_gravity="center"
                android:hint="Email"
                android:layout_marginTop="8dp"
                android:id="@+id/edit_email"
                android:textSize="16sp"
                android:textColor="@color/custom_color"
                android:textColorHint="#6C757D"
                android:padding="10dp"/>
            <EditText
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:layout_gravity="center"
                android:hint="Address"
                android:id="@+id/edit_address"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/custom_color"
                android:textColorHint="#6C757D"
                android:padding="10dp"/>
            <EditText
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:layout_gravity="center"
                android:hint="Mobile"
                android:id="@+id/edit_mobile"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/custom_color"
                android:textColorHint="#6C757D"
                android:padding="10dp"/>
            <EditText
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:layout_gravity="center"
                android:hint="City"
                android:id="@+id/edit_city"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/custom_color"
                android:textColorHint="#6C757D"
                android:padding="10dp"/>
            <EditText
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:layout_gravity="center"
                android:hint="Password"
                android:drawableRight="@drawable/ic_baseline_visibility_off_24"
                android:id="@+id/edit_password"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/custom_color"
                android:textColorHint="#6C757D"
                android:padding="10dp"/>
            <EditText
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:layout_gravity="center"
                android:hint="Confirm Password"
                android:id="@+id/edit_conpassword"
                android:drawableRight="@drawable/ic_baseline_visibility_off_24"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/custom_color"
                android:textColorHint="#6C757D"
                android:padding="10dp"/>
            <EditText
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:layout_gravity="center"
                android:hint="Country"
                android:id="@+id/edit_country"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/custom_color"
                android:textColorHint="#6C757D"
                android:padding="10dp"/>
            <EditText
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:layout_gravity="center"
                android:hint="Document ID Number"
                android:id="@+id/edit_docnum"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/custom_color"
                android:textColorHint="#6C757D"
                android:padding="10dp"/>
            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="#6C757D"
                    android:textSize="16sp"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Document Type"
                    android:textColor="#6C757D"
                    android:layout_marginLeft="20dp"
                    android:textSize="16sp"
                    android:padding="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
              <Spinner
                  android:layout_width="160dp"
                  android:layout_height="40dp"
                  android:id="@+id/spinner_gender"
                  android:padding="10dp"
                  android:background="@drawable/custom_spinner"/>
                <Spinner
                    android:layout_width="160dp"
                    android:layout_height="40dp"

                    android:id="@+id/spinner_document"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/custom_spinner"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="340dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"


                >
            <EditText
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/custom_color"
                android:hint="Uplaod Document(.jpg)"
                android:textColorHint="#6C757D"
                android:background="@drawable/edit_bg"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:id="@+id/edit_upload"/>
                <Button
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"

                    android:text="Choose file"
                    android:padding="15dp"
                    android:textSize="12sp"

                    android:id="@+id/btn_upload"/>
            </LinearLayout>

            <ProgressBar
                android:layout_width="340dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminate="true"
                android:indeterminateTintMode="src_in"
                android:indeterminateTint="@color/custom_color"
                android:id="@+id/progressBar"
                android:progress="20"
               style="@style/Widget.AppCompat.ProgressBar.Horizontal"
              />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/login_bb"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/btn_signup"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>


    </LinearLayout>
</ScrollView>