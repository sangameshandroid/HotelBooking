<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DateFragment"
    android:background="#062639"
    tools:ignore="ScrollViewCount">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_layout"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:id="@+id/datelayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#C9D6CF"
            android:text="Dates"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#062639"
            android:drawableStart="@drawable/ic_date"
            android:layout_marginLeft="5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#C9D6CF"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Check-in"
                android:textSize="15sp"
                android:textColor="#062639"
                android:background="#C9D6CF"
                android:drawableStart="@drawable/ic_date" />
            <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:hint="dd/mm/yyyy"
                android:textColorHint="#062639"
                android:textSize="15sp"
                android:background="#C9D6CF"
                android:id="@+id/edcheckin"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#C9D6CF"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Check-out"
                android:textColor="#062639"
                android:textSize="15sp"
                android:background="#C9D6CF"
                android:drawableStart="@drawable/ic_date" />
            <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:hint="dd/mm/yyyy"
                android:textColorHint="#062639"
                android:textSize="15sp"
                android:background="#C9D6CF"
                android:id="@+id/edcheckout"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:background="@drawable/bg_layout"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Rooms"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#062639"
            android:drawableStart="@drawable/ic_room"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="1"
                android:textSize="15sp"
                android:textColor="#062639"
                android:textAlignment="center"/>


                <Button
                android:layout_width="30dp"
                android:layout_height="25dp"
                    android:layout_marginStart="120dp"
                android:background="@drawable/bg_sub_btn"
                android:text="-"
                android:textSize="15sp"
                android:textColor="#062639"
                android:id="@+id/btnsubtract"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="#C9D6CF"
                    android:id="@+id/txtroomno"
                    android:textAlignment="center"/>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg_add_btn"
                    android:text="+"
                    android:textSize="15sp"
                    android:textColor="#062639"
                    android:id="@+id/btnadd"
                    />









        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:background="@drawable/bg_layout"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Guests"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#062639"
            android:drawableStart="@drawable/ic_guest4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Adults"
                android:textSize="15sp"
                android:textColor="#062639"
                android:textAlignment="center"/>

            <Button
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/bg_sub_btn"
                android:layout_marginStart="120dp"
                android:text="-"
                android:textSize="15sp"
                android:textColor="#062639"
                android:id="@+id/btnsubtract2"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="#C9D6CF"
                android:id="@+id/txtadultno"
                android:textAlignment="center"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/bg_add_btn"
                android:text="+"
                android:textSize="15sp"
                android:textColor="#062639"
                android:id="@+id/btnadd2"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Children"
                android:textSize="15sp"
                android:textColor="#062639"
                android:textAlignment="center"/>

            <Button
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/bg_sub_btn"
                android:layout_marginStart="120dp"
                android:text="-"
                android:textSize="15sp"
                android:textColor="#062639"
                android:id="@+id/btnsubtract3"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="#C9D6CF"
                android:id="@+id/txtchildno"
                android:textAlignment="center"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/bg_add_btn"
                android:text="+"
                android:textSize="15sp"
                android:textColor="#062639"
                android:id="@+id/btnadd3"
                />


        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_add_btn"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:text="Select Rooms"
        android:id="@+id/selectRooms"
        android:textSize="15sp"
        android:textColor="#062639"/>

<LinearLayout
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:gravity="center_vertical"
    android:layout_marginRight="10dp"
    android:background="@drawable/bg_layout">

    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:text="Duration"
        android:textColor="#062639"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtduration"
        android:textSize="15sp"
        android:textColor="#062639"
        android:textAlignment="center"/>

</LinearLayout>
        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_layout">

            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="Rooms"
                android:textColor="#062639"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtnoofroom"
                android:textSize="15sp"
                android:textColor="#062639"
                android:textAlignment="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_layout">

            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="Adults"
                android:textColor="#062639"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtadult"
                android:textSize="15sp"
                android:textColor="#062639"
                android:textAlignment="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_layout">

            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="Children"
                android:textColor="#062639"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtchild"
                android:textSize="15sp"
                android:textColor="#062639"
                android:textAlignment="center"/>

        </LinearLayout>




    </LinearLayout>

</ScrollView>