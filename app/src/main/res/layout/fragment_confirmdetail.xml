<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmdetailFragment"
    android:background="#062639">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center_horizontal"
       android:layout_marginLeft="15dp"
       android:layout_marginTop="15dp"
       >
       <LinearLayout
           android:layout_width="360dp"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center_vertical">
           <TextView
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:text="Room Price :"
               android:textColor="#C9D6CF"
               android:textSize="16sp"
               android:padding="8dp"
               android:textStyle="bold"/>
           <TextView
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:textColor="#C9D6CF"
               android:padding="5dp"
               android:text="Room Tax :"
               android:textStyle="bold"/>

       </LinearLayout>
       <LinearLayout
           android:layout_width="360dp"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <EditText
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:textColor="#C9D6CF"
               android:id="@+id/edit_roomprice"
               android:textSize="16sp"
               android:padding="8dp"
               android:backgroundTint="#C9D6CF"
               />
           <EditText
               android:layout_width="150dp"
               android:padding="8dp"
               android:layout_height="wrap_content"
               android:textColor="#C9D6CF"
               android:textSize="16sp"
               android:id="@+id/edit_roomtax"
               android:layout_marginLeft="30dp"
               android:backgroundTint="#C9D6CF"
               />

       </LinearLayout>
       <LinearLayout
           android:layout_width="360dp"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:layout_marginTop="20dp">
           <TextView
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:text="Extra Facility :"
               android:textColor="#C9D6CF"
               android:textSize="16sp"
               android:padding="8dp"
               android:textStyle="bold"/>
           <TextView
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:textColor="#C9D6CF"
               android:padding="5dp"
               android:text="Promo :"
               android:textStyle="bold"/>

       </LinearLayout>
       <LinearLayout
           android:layout_width="360dp"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <EditText
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:textColor="#C9D6CF"
               android:id="@+id/edit_extrafacility"
               android:textSize="16sp"
               android:padding="8dp"
               android:backgroundTint="#C9D6CF"
               />
           <Spinner
               android:layout_width="150dp"
               android:id="@+id/promospinner"
               android:layout_height="wrap_content"
               android:padding="8dp"
               android:layout_marginLeft="30dp"
               />




       </LinearLayout>
       <LinearLayout
           android:layout_width="360dp"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="20dp"
           android:gravity="center_vertical">
           <TextView
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:text="Discount(%) :"
               android:textColor="#C9D6CF"
               android:textSize="16sp"
               android:padding="8dp"
               android:textStyle="bold"/>
           <TextView
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:textColor="#C9D6CF"
               android:padding="5dp"
               android:text="Discount Amount :"
               android:textStyle="bold"/>

       </LinearLayout>
       <LinearLayout
           android:layout_width="360dp"
           android:layout_height="wrap_content"

           android:orientation="horizontal">
           <EditText
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:textColor="#C9D6CF"
               android:id="@+id/edit_discount"
               android:padding="8dp"
               android:textSize="16sp"
               android:backgroundTint="#C9D6CF"
               />
           <EditText
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:textColor="#C9D6CF"
               android:textSize="16sp"
               android:padding="8dp"
               android:id="@+id/edit_discountamt"
               android:layout_marginLeft="30dp"
               android:backgroundTint="#C9D6CF"
               />

       </LinearLayout>
       <LinearLayout
           android:layout_width="360dp"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:layout_marginTop="20dp">
           <TextView
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:text="Total(INR) :"
               android:textColor="#C9D6CF"
               android:textSize="16sp"
               android:padding="8dp"
               android:textStyle="bold"/>
           <TextView
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:textColor="#C9D6CF"
               android:padding="5dp"
               android:text="Grand Total(INR) :"
               android:textStyle="bold"/>

       </LinearLayout>
       <LinearLayout
           android:layout_width="360dp"
           android:layout_height="wrap_content"

           android:orientation="horizontal">
           <EditText
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:textColor="#C9D6CF"
               android:id="@+id/edit_total"
               android:textSize="16sp"
               android:padding="8dp"
               android:backgroundTint="#C9D6CF"
               />
           <EditText
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:textColor="#C9D6CF"
               android:textSize="16sp"
               android:id="@+id/edit_grandtotal"
               android:padding="8dp"
               android:layout_marginLeft="30dp"
               android:backgroundTint="#C9D6CF" />

       </LinearLayout>



       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="15dp"
           android:background="@drawable/bg_sub_btn"
           android:layout_marginTop="25dp"
           android:layout_marginBottom="20dp"
           android:text="make payment"
           android:id="@+id/btn_payment"
           android:textColor="@color/black"/>

   </LinearLayout>



</ScrollView>